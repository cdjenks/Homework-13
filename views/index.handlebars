<h2>Create a Burger</h2>

<ul id="notDevoured">
    {{#each burgers}}
    {{#unless devoured}}
    {{>burger-blocks}}
    {{/unless}}
    {{/each}}
</ul>


<ul id="yesDevoured">
    {{#each burgers}}
    {{#if devoured}}
    {{>burger-blocks}}
    {{/if}}
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name">
    </div>

    <button id="add-burger" type="submit">Add Burger</button>

</form>