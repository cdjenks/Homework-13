<div class="container" id="burger-content">
    <div class="row" id="burger-title">
        <h1 class="burger-text">Burgers Tracker</h1>
    </div>

    <section class="row">

        <div class="col-lg-2"></div>

        <div class="col-lg-4" id="notDevoured">
            <h5>To be consumed</h5>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burger-blocks}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-4" id="alreadyDevoured">
            <h5>Already devoured</h5>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burger-blocks}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-2"></div>

    </section>

    <div class="row" id="delete-burger-div">
        <button id="delete-btn" style="background-color: rgb(87, 87, 126);">Delete All Burgers</button>
    </div>

    <section class="row" id="burger-form">

        <form class="create-form">
            <h2 class="burger-text">Add a New Burger</h2>
            <div class="form-group">
                <label for="burger-name"></label>
                <input type="text" id="burger-name" placeholder="Name of burger">
                <button id="add-burger" type="submit" style="background-color: rgb(87, 87, 126); font-size: 20px;">Add
                    Burger</button>
            </div>



        </form>
    </section>
</div>
